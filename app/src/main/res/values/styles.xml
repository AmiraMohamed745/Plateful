<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">325dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="hintTextAppearance">@style/CustomHintText</item>
        <item name="boxStrokeColor">@color/primaryColor</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="hintTextColor">@color/black</item>
    </style>


    <style name="GeneralCustomTextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:inputType">textPersonName</item>
    </style>

    <style name="GeneralSearchTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="placeholderTextAppearance">@style/SearchPlaceholderTextAppearance</item>
        <item name="startIconDrawable">@drawable/ic_search</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="SearchResultsTextInputLayout" parent="GeneralSearchTextInputLayout">
        <item name="boxStrokeColor">@color/primaryColor</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="startIconDrawable">@drawable/ic_arrow_back</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="placeholderTextColor">@color/subTextColor</item>
        <item name="boxCornerRadiusTopStart">28dp</item>
        <item name="boxCornerRadiusTopEnd">28dp</item>
        <item name="boxCornerRadiusBottomStart">28dp</item>
        <item name="boxCornerRadiusBottomEnd">28dp</item>
        <item name="startIconTint">@null</item>
        <item name="android:titleMarginTop">32dp</item>
        <item name="android:titleMarginBottom">16dp</item>
    </style>


    <style name="CustomTextInputEditText_Username" parent="GeneralCustomTextInputEditText">
        <item name="android:inputType">textPersonName</item>
    </style>


    <style name="CustomTextInputEditText_Email" parent="GeneralCustomTextInputEditText">
        <item name="android:inputType">textEmailAddress</item>
    </style>


    <style name="CustomTextInputEditText_Password" parent="GeneralCustomTextInputEditText">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="GeneralSearchTextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:inputType">text</item>
        <item name="android:titleMarginTop">32dp</item>
        <item name="android:titleMarginBottom">16dp</item>
    </style>


    <style name="CustomHintText" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/hintTextColor</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="SearchPlaceholderTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/subTextColor</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>


    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">270dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:backgroundTint">@color/primaryColor</item>
        <item name="android:textColor">@color/onPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="BlackButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">225dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="HeadingText_2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_extra_bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="SubText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/subTextColor</item>
    </style>

<!--
    This divider is supposed to show on the Welcome screen twice; on the left and right, but it doesn't
-->
    <style name="divider">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">5dp</item>
        <item name="background">@color/white</item>
        <item name="color">@color/white</item>
        <item name="android:solidColor">@color/white</item>
    </style>

    <style name="WhiteButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">225dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconTint">@null</item>
        <item name="iconSize">26dp</item>
    </style>

</resources>