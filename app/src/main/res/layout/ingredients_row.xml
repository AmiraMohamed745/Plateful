<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/constraintLayout_Ingredients"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginEnd="16dp">

    <ImageView
        android:id="@+id/imageView_ingredient"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/bg_ingredient"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textView_Ingredient_Name"
        style="@style/SubTitle_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/imageView_ingredient"
        app:layout_constraintStart_toStartOf="@id/imageView_ingredient"
        app:layout_constraintEnd_toEndOf="@id/imageView_ingredient"
        tools:text="Ingredient" />

    <TextView
        android:id="@+id/textView_Ingredient_Measurement"
        style="@style/SubTitle_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/textView_Ingredient_Name"
        app:layout_constraintStart_toStartOf="@id/imageView_ingredient"
        app:layout_constraintEnd_toEndOf="@id/imageView_ingredient"
        tools:text="Measurement" />
</androidx.constraintlayout.widget.ConstraintLayout>